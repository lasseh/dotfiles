[user]
	name = Lasse
	email = haugen.lasse@gmail.com
[github]
	user = lasseh
[gist]
	private = yes
[core]
	excludesfile = ~/.config/git/.gitignore_global
	editor = vim
	pager = delta
	autocrlf = input
	safecrlf = true
	eol = lf

[init]
	defaultBranch = main

[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = "#9ece6a"
	changed = "#7aa2f7" 
	untracked = "#7dcfff"
	branch = "#bb9af7 bold"
	header = "#c0caf5"
	localBranch = "#bb9af7"
	remoteBranch = "#9ece6a"
	nobranch = "#f7768e bold"

[pull]
	rebase = false

[push]
	default = simple
	followTags = true

[diff]
 tool = vimdiff
 context = 3
 renames = true
 wordRegex = '[^[:space:]]+'

[alias]
	st = status
	co = checkout
	br = branch
	ci = commit
	df = diff
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	unstage = reset HEAD --
	last = log -1 HEAD
	history = log -p --
	changes = diff @{1}..
	# Show files changed in last commit
	changed = show --pretty="" --name-only
	# Show commits not yet pushed
	unpushed = log @{u}..
	# Show commits not yet pulled
	unpulled = log ..@{u}
	# Pretty status with branch info and stats
	s = status --short --branch

[merge]
	tool = vimdiff
	conflictstyle = diff3

[help]
	autocorrect = 1

[delta]
	navigate = true
	light = false
	side-by-side = false
	line-numbers = true
	syntax-theme = base16
	plus-style = syntax "#20253a"
	minus-style = syntax "#362c3d"
	plus-emph-style = syntax "#394b70"
	minus-emph-style = syntax "#614c67"
	line-numbers-plus-style = "#7aa2f7"
	line-numbers-minus-style = "#f7768e"
	line-numbers-zero-style = "#565f89"
	file-style = "#c0caf5"
	hunk-header-style = "#bb9af7"

[interactive]
	diffFilter = delta --color-only

[includeIf "gitdir:~/code/go/src/github.com/lasseh/svv/"]
	path = ~/.config/git/work-config
