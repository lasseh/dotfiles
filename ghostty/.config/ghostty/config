# Fonts
font-family = "Hack Nerd Font"
font-size = 16
font-thicken = true
theme = TokyoNight

# Cursor Configuration
cursor-color = #c0caf5
cursor-style = block
cursor-style-blink = true
cursor-opacity = 0.8
cursor-invert-fg-bg = true

# Selection Colors
selection-background = #283457
selection-foreground = #c0caf5

# Window Configuration
window-height = 50
window-width = 200
window-padding-x = 10
window-padding-y = 10
unfocused-split-opacity = 0.7
unfocused-split-fill = #1a1b26
# Default: auto-determined based on background (darkens bg by 0.08 if dark theme, 0.4 if light)
split-divider-color = #8b008b
#background-opacity = 0.95
#background-blur-radius = 20


# Mouse and Interaction
mouse-hide-while-typing = true
copy-on-select = true

# Shell Integration
shell-integration = detect

# macOS Specific Settings
macos-option-as-alt = true
macos-titlebar-style = tabs
window-decoration = true

# Key Bindings (Common iTerm2 equivalents)
keybind = cmd+t=new_tab
keybind = cmd+w=close_surface
keybind = cmd+d=new_split:right
keybind = cmd+shift+d=new_split:down
keybind = cmd+shift+left=goto_split:previous
keybind = cmd+shift+right=goto_split:next
keybind = cmd+left=previous_tab
keybind = cmd+right=next_tab
keybind = cmd+k=clear_screen
keybind = cmd+shift+enter=toggle_fullscreen

# Terminal Behavior
window-inherit-working-directory = true
confirm-close-surface = false
scrollback-limit = 100000
clipboard-read = allow
clipboard-write = allow
clipboard-paste-protection = true
clipboard-trim-trailing-spaces = true

# Performance
gtk-single-instance = true
auto-update = check

